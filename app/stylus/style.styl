// Fonts

@import './mixins/fonts.styl'
webfont('Geometria', 'geometria-medium', 500)
webfont('Cera Round Pro', 'ceraroundpro-regular', regular)
webfont('Cera Round Pro', 'ceraroundpro-light', 300)
webfont('Cera Round Pro', 'ceraroundpro-medium', 500)
webfont('Cera Round Pro', 'ceraroundpro-bold', bold)

// Variables

colorDark = #222222
colorLight = #fdfffc
colorWhite = #ffffff
colorBlue = #60759d
cera = 'Cera Round Pro', sans-serif
geo = 'Geometria', sans-serif
max = 1220px

// Default

html
	height 100%

	*
		max-height 1000000px
		vertical-align top
		box-sizing border-box

	*:before
	*:after
		vertical-align top
		box-sizing border-box

body
	overflow-x hidden
	width 100%
	height 100%
	color colorBlue
	font-size 12px
	line-height 16px
	font-family cera
	padding 0
	margin 0
	background-color #fafaff
	-webkit-tap-highlight-color transparent

p
	text-indent 0
	padding 0
	margin 0 0 16px

table
	margin 0 0 16px
	border-collapse collapse

	td
		padding 0

:focus
	outline none

img
	padding 0
	margin 0
	border 0

a
	color colorDark
	text-decoration none

	&:hover
		text-decoration none

form
	margin 0

ul
	margin 0 0 10px 16px
	padding 0

	li
		padding 0
		list-style none

ol
	margin 0 0 10px 18px
	padding 0

	li
		padding 0 0 0 16px

input
select
textarea
	color colorDark
	font-size 12px
	font-family cera
	padding 0
	margin 0
	background none
	border 0
	box-sizing border-box

textarea
	overflow auto

button
	font-family cera
	margin 0
	border 0
	box-sizing border-box

	&::-moz-focus-inner
		padding 0
		border 0

::-webkit-input-placeholder
	color #a8b2bf

:-moz-placeholder
	color #a8b2bf

::-moz-placeholder
	color #a8b2bf

:-ms-input-placeholder
	color #a8b2bf

.img-cover
.img-contain
	display none !important

.wrapper
	min-width 1220px
	min-height 100%
	padding-top 96px

// Libs

@import '../css/libs.css'

// Core

.header
	position absolute
	left 0
	top 0
	z-index 100
	width 100%
	
	&__row
		position relative
		display flex
		justify-content space-between
		align-items center
		max-width max
		height 96px
		padding 0 30px
		margin 0 auto
		
	&__logo
		display inline-block
		display flex
		align-items center
		flex-direction column
		padding 18px 30px 12px
		margin-left -30px
		
		&--pic
			width 100%
			height auto
			max-width 220px
			
		&--text
			display block
			color colorWhite
			font-size 14px
			line-height 18px
			margin 2px 0 0 -1px
			
	&__rc
		display flex
		align-items center

.nav
	font-size 0
	margin-right 44px
	margin-bottom 4px
	
	&--link
		position relative
		display inline-block
		color colorLight
		font-size 16px
		line-height 24px
		font-weight bold
		padding 10px
		margin 0 16px
		
		&:after
			content ''
			position absolute
			left 50%
			bottom 4px
			width 4px
			height 4px
			background-color #fafbfd
			border-radius 50%
			opacity 0
			transform translateY(4px)
			transition opacity .2s ease, transform .2s ease
			
		&:hover
			&:after
				opacity 1
				transform translateY(0)

.btn
	display inline-block
	min-width 200px
	font-size 16px
	line-height 24px
	font-weight bold
	text-align center
	cursor pointer
	padding 14px 14px 18px
	border-width 2px
	border-style solid
	border-radius 30px
	transition background-color .2s ease, border-color .2s ease, min-width .2s ease, box-shadow .2s ease
	
	&_transparent
		color colorLight
		background-color transparent
		border-color #5489c3
		
		&:hover
			background-color #5489c3
			
	&_red
		color #f0f5ff
		background-color #e70067
		border-color #e70067
		
		&:hover
			background-color #c9005a
			border-color #c9005a
			box-shadow 0 6px 33px 7px rgba(231, 0, 103, 0.36)
			
	&_animated-width
		font-weight 500
		font-family geo
		padding-top 16px
		padding-bottom 16px
		
		&:hover
			min-width 260px

.title-h2
	display block
	font-size 36px
	line-height 54px
	font-weight 500
	padding 0 
	margin 0 0 35px

